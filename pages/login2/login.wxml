<!--pages/login/login.wxml-->
<view style="width: 100%; text-align: center; margin: 10px 0 30px 0; font: 16px bold;">登录到您的帐户</view>
<image src="../../images/microsoft_logo.svg"
  style="width: 120px; height: 20px; margin: 5px 8px; display: block"></image>
  
<view style="margin: 10px 10px;display: flex; align-items: center;">
  <image src="../../images/arrow_left.svg"
    style="width: 20px; height: 20px; margin: 3px 5px 0 8px"></image>
  <text style="font-size: 12px">{{email}}</text></view>
<view style="margin: 10px 20px"><text style="font: 24px bold">输入密码</text></view>
<view style="margin: 10px 20px;"><input style="border-bottom: 1px #0067b8 solid" placeholder="密码" auto-focus="true"></input></view>
<view style="margin: 10px 20px"><text style="font-size: 12px; color:#0067b8">忘记了密码</text></view>
<view style="margin: 40px 20px 0 0; float:right"><button bindtap="login" style="width:80px;height:28px;font-size:15px;color:white;background-color:#0067b8;line-height:1.5"><text style="vertical-align:middle">登录</text></button></view>
